<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BiaTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>



    <!-- Base application theme. -->
    <style name="Theme.BiaTestProject" parent="Theme.BiaTest">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary_text_third</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/title_text_third</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorTertiary">@color/title_text_third</item>
        <item name="android:textColorPrimaryDisableOnly">@color/secondary_text_third</item>
        <item name="buttonTint">@color/title_text_third</item>
    </style>
</resources>